admin.duyuchen.cn {
	encode gzip
	reverse_proxy	127.0.0.1:8007
}

duyuchen.cn, www.duyuchen.cn {
	encode gzip
	@is_mobile_post {
		path /post/*
		header_regexp User-Agent "(?i)(android|iphone|ipod|ipad|windows[ -]?phone|mobi|mobile|blackberry|opera mini|opera mobi)"
	}
	redir @is_mobile_post https://m.duyuchen.cn{uri} 302
	reverse_proxy	127.0.0.1:8008
}

m.duyuchen.cn {
	encode gzip
	reverse_proxy   127.0.0.1:8009
}
